/* Program provides a data quality check by examining variable length and type for weekly data over several 
months. */

libname Report "\\data_location" ;

%macro loop;

data temp_contents_all_; 
	set _null_; 
run;

%do i=1 %to 36;
	data _null_; 
		format dt1 dtx date9.;
		dt1="05jan2018"d;
		dtx=intnx('DAY', dt1, 7*&i);
		x=put(put(dtx, date9.), $9.);
		call symput ("x", x);
	run;

	proc contents data=Report.data_file_&x
		out=temp_contents(keep=name length type) noprint;
	run;

	data temp_contents;
		set temp_contents;
		format week date9.;
		week="&x"d;
	run;

	data temp contents_all_;
		set temp_contents_all temp_contents;
	run;
%end

%mend;
%loop;

proc sort data=temp_contents_all;
	by name;
run;

proc means data=temp contents_all noprint;
	by name;
	var LENGTH;
	output out=len_check mean=aveL min=miL max=maL;
run;

proc means data=temp_contents_all noprint;
	by name;
	var TYPE;
	output out=type_check min=miL max=maL;
run;

data all_check;
	merge type_check len_check;
	by name;
run;
